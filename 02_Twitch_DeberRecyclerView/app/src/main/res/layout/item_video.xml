<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    >


    <com.google.android.material.chip.Chip
        android:id="@+id/chip5"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="68dp"
        android:backgroundTint="#EAEAEA"
        android:text="Esports"
        android:textSize="10sp"
        app:chipStrokeWidth="0dp"
        app:layout_constraintStart_toEndOf="@+id/iv_vista_previa"
        app:layout_constraintTop_toBottomOf="@+id/tv_juego_stream" />

    <ImageView
        android:id="@+id/iv_vista_previa"
        android:layout_width="148dp"
        android:layout_height="93dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circle"
        android:backgroundTint="#f00"
        app:layout_constraintBottom_toBottomOf="@id/iv_vista_previa"
        app:layout_constraintStart_toStartOf="@id/iv_vista_previa"/>

    <TextView
        android:id="@+id/tv_counter_viewers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text="520"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout3"
        app:layout_constraintStart_toEndOf="@+id/frameLayout3"
        app:layout_constraintTop_toTopOf="@+id/frameLayout3"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/tv_nombre_canal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:hint="nOMBRE cANAL"
        app:layout_constraintStart_toEndOf="@+id/iv_vista_previa"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_descripcion_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Descripcion stream"
        app:layout_constraintStart_toEndOf="@+id/iv_vista_previa"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_canal" />

    <TextView
        android:id="@+id/tv_juego_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Juego"
        app:layout_constraintStart_toEndOf="@+id/iv_vista_previa"
        app:layout_constraintTop_toBottomOf="@+id/tv_descripcion_stream" />

    <ImageView
        android:id="@+id/iv_icono_canal"
        android:layout_width="16dp"
        android:layout_height="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nombre_canal"
        app:layout_constraintEnd_toStartOf="@+id/tv_nombre_canal"
        app:layout_constraintStart_toEndOf="@+id/iv_vista_previa"
        app:layout_constraintTop_toTopOf="@+id/tv_nombre_canal"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip4"
        android:layout_width="52dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#EAEAEA"
        android:text="VCT"
        android:textSize="10sp"
        app:chipStrokeWidth="0dp"
        app:layout_constraintStart_toEndOf="@+id/iv_vista_previa"
        app:layout_constraintTop_toBottomOf="@+id/tv_juego_stream" />

</androidx.constraintlayout.widget.ConstraintLayout>